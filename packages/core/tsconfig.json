{
    "compilerOptions": {
        "declaration": true,
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
}
